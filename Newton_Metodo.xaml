<Window 
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
       Title="Newton_Metodo" Height="350" Width="450">
    <Grid>
        <Label x:Name="title" Content="METODOS ITERATIVOS PARA APROXIMAR RAICES." HorizontalAlignment="Left" Margin="22,19,0,0" VerticalAlignment="Top" Height="37" Width="399" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="ralla" Content="________________________________________" HorizontalAlignment="Left" Margin="39,0,0,0" VerticalAlignment="Top" Height="71" Width="308" FontSize="36" FontWeight="Bold"/>
        <CheckBox x:Name="biseccion" Content="1. Método de la Bisección" HorizontalAlignment="Left" Margin="57,83,0,0" VerticalAlignment="Top" Height="23" Width="155" FontSize="11" FontWeight="Bold"/>
